<div class="course-main-container">
<%= form_for @course do |f| %>




<div class="first-conatiner">
  <div class="rammassage">
    <%= f.fields_for :pickups do |pickup| %>
        <%= pickup.text_field :address, label: false, :required => true, :placeholder => 'Adresse de rammassage', class: 'inline-form address-input' %>
    <% end %>
    <%= f.fields_for :pickups do |pickup| %>
        <%= pickup.date_field :date, label: false, :required => true, :placeholder => 'Date', class: 'inline-form' %>
    <% end %>
    <%= f.fields_for :pickups do |pickup| %>
        <%= pickup.text_field :details, :as => :text, :placeholder => 'Des infos à nous communiquer sur le ramassage ?', class: 'inline-form' %>
    <% end %>

  </div>
  <div class="livraison">
    <%= f.fields_for :drops do |drop| %>
        <%= drop.text_field :address, label: false, :required => true, :placeholder => 'Adresse de livraison', class: 'inline-form address-input' %>
    <% end %>
    <%= f.fields_for :drops do |drop| %>
        <%= drop.date_field :date, label: false, :required => true, :placeholder => 'Date', class: 'inline-form' %>
    <% end %>
    <%= f.fields_for :drops do |drop| %>
        <%= drop.text_field :details, :as => :text, :placeholder => 'Des infos à nous communiquer sur la livraison ?', class: 'inline-form' %>
    <% end %>
  </div>
</div>
<div class="second-container">
  <div
  id="map-container"
  data-google-api-key="<%= ENV['GOOGLE_API_KEY'] %>">
  </div>
  <div class="options-container">
    <div class="urgences-container">
      <div class="urgence-1 urgence active">
        <div class="urgence-image"></div>
        <p>Livré dans la journée</p>
      </div>
      <div class="urgence-2 urgence">
        <div class="urgence-image"></div>
        <p>Livré dans les 4 prochaines heures</p>
      </div>
      <div class="urgence-3 urgence">
        <div class="urgence-image"></div>
        <p>Livré dans les 45 minutes</p>
      </div>
      <div class="urgence-4 urgence">
        <div class="urgence-image"></div>
        <p>Personnaliser les heures</p>
      </div>
      <%= f.text_field :urgence, class: "hidden" %>
    </div>

    <div class="bikes-container">
      <div class="bike-1 bike active">
        <div class="bike-1-image"></div>
        <p>Sac à dos</p>
      </div>
      <div class="bike-2 bike">
        <div class="bike-2-image"></div>
        <p>Vélo cargo</p>
      </div>
      <%= f.text_field :bike_id, class: "hidden" %>
    </div>

    <div class="total-container">
      <div class="total-title price-line"><p>Prestation</p><div class="euro-image"></div><div class="ticket-image"></div> </div>
      <div class="sous-total total-urgence price-line"><p>Urgence</p><p id="urgence-t">0</p></div>
      <div class="sous-total total-distance price-line"><p>Distance</p><p id="distance-t">0</p></div>
      <div class="sous-total total-cargo price-line"><p>Volume/poid</p><p id="cargo-t">0</p></div>
      <div class="total total-ticket price-line"><p>Total</p><p id="total-t">0</p></div>


      <%= f.text_field :user_id, class: "hidden" %>
      <%= f.text_field :distance, class: "hidden" %>
      <%= f.text_field :status, class: "hidden" %>

      <%= f.submit "Commander", class: "bici-button" %>
    </div>
  </div>
</div>
<% end %>
</div>






