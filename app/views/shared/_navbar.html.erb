<div id="swup" class="main-nav">
  <% color_text = (params[:controller] == 'pages' || params[:controller] == 'services') && (params[:action] == 'home' || params[:action] == 'show') ? 'text-white' : 'text-blue'  %>
  <% color_user = (params[:controller] == 'pages' || params[:controller] == 'services') && (params[:action] == 'home' || params[:action] == 'show') ? 'user-white' : 'user-blue'  %>


  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand #{color_text}" do %>
      <h1 class="logo">BICI<strong>COURIERS</strong></h1>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Accueil", "#", class: "nav-link #{color_text}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Notre histoire", "#", class: "nav-link #{color_text}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Les services", services_path, class: "nav-link #{color_text}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Les tarifs", "#", class: "nav-link #{color_text}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contactez-nous", "#", class: "nav-link #{color_text}" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "#{color_user}.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link #{color_text}" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
